{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "$ui/*": ["./src/ui/*"],
      "$ui": ["src/ui"],
      "$style/*": ["src/style/*"],
      "$style": ["src/style"],
      "$store/*": ["src/store/*"],
      "$store": ["src/store"],
      "$components/*": ["src/components/*"],
      "$components": ["src/components"],
      "$lib/*": ["src/lib/*"],
      "$lib": ["src/lib"],
      "$utils/*": ["src/utils/*"],
      "$utils": ["src/utils"],
      "$pages/*": ["src/pages/*"],
      "$pages": ["src/pages"],
      "$layout/*": ["src/layout/*"],
      "$layout": ["src/layout"],
      "$hooks/*": ["src/hooks/*"],
      "$hooks": ["src/hooks"],
      "$data/*": ["src/data/*"],
      "$data": ["src/data"],
      "$assets/*": ["src/assets/*"],
      "$assets": ["src/assets"],
      "$types": ["src/interface"],
      "$src/*": ["src/*"],
      "$src": ["src"],
      "$/*": ["/*"]
    }
  },

  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "tailwind.config.js"],
  "exclude": ["node_modules", "commitlint.config.cjs"]
}
